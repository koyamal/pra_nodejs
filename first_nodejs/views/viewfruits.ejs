<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/style.css">
    <title>Pra_Node.js(page 2)</title>
    <script src="/send_url.js"></script>
  </head>
  <body>
    <%- include('header.ejs'); %>
    <h1>Welcome to View Fruits page!</h1>
    <div class="fruitpage">
        <h3>Fruits List</h3>
        <% fruits.forEach((fruit) =>{ %>
            <p><%= fruit.id %> : <%= fruit.name %></p>
        <% }) %>
    </div>
    <div class="fruitpage">
        <h3>Delete Fruits</h3>
        <form action="/delete_fruits" method="post">
            <% fruits.forEach((fruit) =>{ %>
                <p>
                    <input type="checkbox" name="fruits" value=<%= fruit.name %>> <%= fruit.name %>
                </p>
            <% }) %>
            <input type="submit" value="Delete">
        </form>
    </div>
    <div class="fruitpage">
        <h3>Delete Fruit</h3>
        <ul>
            <% fruits.forEach((fruit) =>{ %>
                <li class="item_list">
                    <div class="item_name">
                        <%= fruit.name %>
                    </div>
                    <div class="item_btm">
                        <form action="/delete_fruits_link/<%= fruit.name %>" method="post">
                            <input type="submit" value="delete">
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
    <div class="fruitpage">
        <h3>Add Fruit</h3>
        <form action="/add_fruit" method="post">
            <input type="text" name="fruitname">
            <input type="submit" value="add">
        </form>
    </div>
    <div class="btm fruitpage">
        <a class="changepage underline" href="/">Top page!</a>
    </div>
    <%- include('footer.ejs'); %>
  </body>
</html>